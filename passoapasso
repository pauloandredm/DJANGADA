(pra sair só digitar 'exit')

cd /vagrant >> 
python -m venv ~/env (criar venv chamada env) >>

source ~/env/bin/activate (ativar venv)
(pra sair só digitar 'deactivate')

django-admin startproject nome
python manage.py startapp nomeapp
